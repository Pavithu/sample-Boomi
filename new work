    output=""
    for value in "${my_array[@]}"; do
        #echo "$packagedComponentId"
        #echo "and"
        #echo "$value"
        if [ "$packagedComponentId" == "$value" ]; then
            output="value found"
            break
        fi
    done
    if [ "$output" != "value found" ]; then
        echo "$packagedComponentId"
        echo "not deployed"
    fi
done






